#!/bin/bash
if [ $# -lt 1 ]; then
  echo "Usage: $0 [--cflags|--libs]"
  exit -1
fi

if [ "$1" == "--cflags" ]; then
  echo "-I${PWD}/../install/include -D__PLAYBOOK__"
elif [ "$1" == "--libs" ]; then
  echo "-L${PWD}/../install/lib -lSDL -lTouchControlOverlay -lbps -lxml2 -lpng -lscreen -lEGL -lGLESv2"
fi
